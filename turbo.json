{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "AI_GATEWAY_API_KEY",
    "NUXT_GITHUB_TOKEN"
  ],
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
      "outputs": [".vercel/output/**", ".nuxt/**", ".output/**", "dist/**"],
      "env": [
        "NUXT_GITHUB_SNAPSHOT_REPO",
        "NUXT_GITHUB_SNAPSHOT_BRANCH",
        "NUXT_SAVOIR_API_URL",
        "NUXT_SAVOIR_SECRET_KEY",
        "BETTER_AUTH_SECRET",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "NUXT_YOUTUBE_API_KEY",
        "TURSO_DATABASE_URL",
        "TURSO_AUTH_TOKEN",
        "DATABASE_URL_UNPOOLED",
        "BLOB_READ_WRITE_TOKEN",
        "KV_URL",
        "KV_REST_API_TOKEN",
        "KV_REST_API_URL"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "lint:fix": {
      "dependsOn": ["transit"]
    },
    "typecheck": {
      "dependsOn": ["transit"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "sync:docs": {
      "cache": false
    },
    "snapshot:create": {
      "cache": false
    },
    "workflow:web": {
      "cache": false,
      "persistent": true
    }
  }
}
