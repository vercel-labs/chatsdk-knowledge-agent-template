# GitHub App credentials
NUXT_GITHUB_APP_ID=your_app_id
NUXT_GITHUB_APP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
NUXT_GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Discord bot credentials (optional â€” omit to disable Discord)
NUXT_DISCORD_BOT_TOKEN=your_bot_token
NUXT_DISCORD_PUBLIC_KEY=your_public_key
NUXT_DISCORD_APPLICATION_ID=your_application_id
NUXT_DISCORD_MENTION_ROLE_IDS=role_id_1,role_id_2

# Savoir API (apps/chat)
NUXT_SAVOIR_API_URL=http://localhost:3000
NUXT_SAVOIR_API_KEY=your_api_key

# AI Gateway API key (Vercel AI Gateway)
# Get one at: https://vercel.com/dashboard/ai
AI_GATEWAY_API_KEY=your_gateway_key

# Bot trigger - must match your GitHub App slug (derived from app name)
# Example: "My Bot App" -> "my-bot-app" -> mention as @my-bot-app[bot]
NUXT_PUBLIC_BOT_TRIGGER=@your-app-slug
