{
  "name": "@savoir/config",
  "version": "0.0.1",
  "description": "Configuration loader and types for Savoir",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
