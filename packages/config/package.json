  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "c12": "^3.0.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "tsdown": "^0.12.4",
    "typescript": "^5.8.3"
  }
}
