{
  "name": "@savoir/monorepo",
  "private": true,
  "type": "module",
  "description": "Monorepo for Savoir",
  "author": "HugoRCD",
  "funding": "https://github.com/sponsors/HugoRCD",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoRCD/savoir.git"
  },
  "bugs": {
    "url": "https://github.com/HugoRCD/savoir/issues"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "turbo run build --filter='./packages/*'",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:chat": "turbo run dev --filter=@savoir/chat",
    "sync:docs": "turbo run sync:docs --filter=@savoir/chat",
    "snapshot:create": "turbo run snapshot:create --filter=@savoir/chat",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "automd": "automd",
    "workflow": "turbo run workflow:web --filter=@savoir/chat"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "automd": "^0.4.2",
    "turbo": "^2.7.5"
  },
  "packageManager": "bun@1.2.22"
}
