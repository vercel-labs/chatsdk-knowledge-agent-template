{
  "name": "@savoir/monorepo",
  "private": true,
  "type": "module",
  "description": "Monorepo for Savoir",
  "author": "HugoRCD",
  "funding": "https://github.com/sponsors/HugoRCD",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoRCD/savoir.git"
  },
  "bugs": {
    "url": "https://github.com/HugoRCD/savoir/issues"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "turbo run build --filter='./packages/*'",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:chat": "turbo run dev --filter=@savoir/chat",
    "dev:gateway": "curl -X GET http://localhost:3000/api/discord/gateway",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "automd": "automd",
    "workflow": "turbo run workflow:web --filter=@savoir/chat"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "automd": "^0.4.3",
    "playwright": "^1.58.2",
    "turbo": "^2.8.3"
  },
  "packageManager": "bun@1.2.22",
  "overrides": {
    "minimatch": "^10.0.1"
  },
  "patchedDependencies": {
    "@nuxthub/core@0.10.6": "patches/@nuxthub%2Fcore@0.10.6.patch"
  }
}
